Algoritmo Numero_mayor
    Escribir "Venta vendedor 1:"
    Leer num1
    Escribir "Venta vendedor 2:"
    Leer num2
    Escribir "Venta vendedor 3:"
    Leer num3
    Escribir "Venta vendedor 4:"
    Leer num4
    
    // salvar los valores originales 
    o1 <- num1
    o2 <- num2
    o3 <- num3
    o4 <- num4
	
    // Ordenar
    Si num1 > num2 Entonces
        temp <- num1
        num1 <- num2
        num2 <- temp
    FinSi
    
    Si num2 > num3 Entonces
        temp <- num2
        num2 <- num3
        num3 <- temp
    FinSi
    
    Si num3 > num4 Entonces
        temp <- num3
        num3 <- num4
        num4 <- temp
    FinSi
    
    Si num1 > num2 Entonces
        temp <- num1
        num1 <- num2
        num2 <- temp
    FinSi
    
    Si num2 > num3 Entonces
        temp<- num2
        num2 <- num3
        num3 <- temp
    FinSi
    
    Si num1 > num2 Entonces
        temp<- num1
        num1<- num2
        num2 <- temp
    FinSi
    
    // Resultados
	Mostrar  "-----------------------------------------------------------"
	
    Mostrar "resultado:"
    
	Mostrar "Ventas originales:"
    Mostrar "num1:", o1
    Mostrar "num2:", o2
    Mostrar "num3:", o3
	Mostrar "num4:", o4
	
    Mostrar  "-----------------------------------------------------------"
	
    Mostrar "ventas ordenadas:"
    Mostrar "menor:", num1
    Mostrar "segundo:", num2
	Mostrar "tercero:", num3
    Mostrar "mayor:", num4
    
    Mostrar  "-----------------------------------------------------------"
    Mostrar "mayor - menor:", num4 - num1
    Mostrar "segundo - menor:", num2 - num1
    Mostrar "mayor - tercero:", num4 - num3
	Mostrar "tercero - segundo:", num3 - num2
    
	Mostrar  "-----------------------------------------------------------"
	//calculo
    suma <- o1 + o2 + o3 + o4
    prom <- suma / 4
    
	//mostrar nuevamente
    Mostrar  "suma total:", suma
	Mostrar "promedio:", prom
FinAlgoritmo

